<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">

    <TextView
        android:id="@+id/pantalla"
        android:height="350dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        />

    <TableRow>
        <Button
            android:id="@+id/btn1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#009688"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MC"/>
        <Button
            android:id="@+id/btn2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#F11111"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MR"/>
        <Button
            android:id="@+id/btn3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#F11111"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M+"/>
        <Button
            android:id="@+id/btn4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#F11111"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M-"/>
        <Button
            android:id="@+id/btn5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#F11111"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MS"/>
        <Button
            android:id="@+id/btn6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="#F11111"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"/>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>

    <TableLayout
        android:stretchColumns="*">
        <TableRow>
            <Button
                android:id="@+id/btn7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="%"/>
            <Button
                android:id="@+id/btn8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CE"/>
            <Button
                android:id="@+id/btn9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"/>
            <Button
                android:id="@+id/btn10"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DEL"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>

        <TableRow>
            <Button
                android:id="@+id/btn11"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1/X"/>
            <Button
                android:id="@+id/btn12"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X^2"/>
            <Button
                android:id="@+id/btn13"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SQRT(X)"/>
            <Button
                android:id="@+id/btn14"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>

        <TableRow>
            <Button
                android:id="@+id/btn15"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"/>
            <Button
                android:id="@+id/btn16"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"/>
            <Button
                android:id="@+id/btn17"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"/>
            <Button
                android:id="@+id/btn18"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>

        <TableRow>
            <Button
                android:id="@+id/btn19"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"/>
            <Button
                android:id="@+id/btn20"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"/>
            <Button
                android:id="@+id/btn21"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"/>
            <Button
                android:id="@+id/btn22"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>

        <TableRow>
            <Button
                android:id="@+id/btn23"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"/>
            <Button
                android:id="@+id/btn24"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"/>
            <Button
                android:id="@+id/btn25"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"/>
            <Button
                android:id="@+id/btn26"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
        <TableRow>
            <Button
                android:id="@+id/btn27"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+/-"/>
            <Button
                android:id="@+id/btn28"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"/>
            <Button
                android:id="@+id/btn29"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=","/>
            <Button
                android:id="@+id/btn30"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="#F11111"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="="/>
        </TableRow>
    </TableLayout>
</TableLayout>